<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"

    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_name_ISub"
                    android:fontFamily="@font/montseratt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TÊN MÔN HỌC"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="start"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/tv_mamh_ISub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montseratt"
                    android:text="Mã MH"
                    android:textSize="14dp"
                    android:layout_gravity="start"
                    android:textColor="#DD2C00"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/tv_sotiet_ISub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số tiết:"
                    android:fontFamily="@font/montseratt"
                    android:textSize="14dp"
                    android:layout_gravity="start"
                    android:textColor="#DD2C00"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_updateSP"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/update"/>
                <ImageView
                    android:id="@+id/img_deleteSP"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/delete1"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>